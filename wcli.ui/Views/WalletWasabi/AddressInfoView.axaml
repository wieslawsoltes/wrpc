<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mww="using:WasabiCli.Models.WalletWasabi"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WasabiCli.Views.WalletWasabi.AddressInfoView"
             x:CompileBindings="True" x:DataType="mww:AddressInfo">
  <ScrollViewer HorizontalScrollBarVisibility="Disabled">
    <StackPanel Spacing="4">
      <!-- Address -->
      <Label Content="Address" />
      <TextBox Text="{Binding Address}"
               Classes="readonly" />
      <!-- KeyPath -->
      <Label Content="KeyPath" />
      <TextBox Text="{Binding KeyPath}"
               Classes="readonly" />
      <!-- Label -->
      <Label Content="Label" />
      <TextBox Text="{Binding Label}"
               Classes="readonly" />
      <!-- PublicKey -->
      <Label Content="PublicKey" />
      <TextBox Text="{Binding PublicKey}"
               Classes="readonly" />
      <!-- ScriptPubKey -->
      <Label Content="ScriptPubKey" />
      <TextBox Text="{Binding ScriptPubKey}"
               Classes="readonly" />
    </StackPanel>
  </ScrollViewer>
</UserControl>
